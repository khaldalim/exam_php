{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }


    </style>

    <div class="example-wrapper">
        <h1>Home</h1>
        <table>
            <tr>
                <th>ID</th>
                <th>created at</th>
                <th>name</th>
                <th>phone</th>
                <th>Comp√©tences</th>
                <th>birthday</th>
            </tr>

            {% for stagiaire in stagiaires %}
                <tr>
                    <td>{{ stagiaire.id }}</td>
                    <td>{{ stagiaire.createdat | date('d/m/Y H:i') }}</td>
                    <td>{{ stagiaire.name }}</td>
                    <td>{{ stagiaire.phone }}</td>
                    <td>
                        {% for competence in stagiaire.competences %}
                            {{ competence.name }}
                        {% endfor %}

                    </td>
                    <td>{{ stagiaire.birthday | date('d/m/Y') }}
                        {% if stagiaire.birthday | date('d/m') == "now"|date(('d/m'))  %}
                            <img width="45" src="{{ asset('images/cake.png') }}" alt="birhday!" />
                        {% endif %}

                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
